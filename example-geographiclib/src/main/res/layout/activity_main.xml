<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="mil.emp3.example.geographiclib.MainActivity">

    <data>

        <variable
            name="geolib"
            type="mil.emp3.example.geographiclib.MainActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lat 1"
                android:textSize="10pt"></TextView>

            <EditText
                android:id="@+id/Lat1"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lon 1"
                android:textSize="10pt"></TextView>

            <EditText
                android:id="@+id/Lon1"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lat 2"
                android:textSize="10pt"></TextView>

            <EditText
                android:id="@+id/Lat2"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lon 2"
                android:textSize="10pt"></TextView>

            <EditText
                android:id="@+id/Lon2"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"></EditText>
        </LinearLayout>

        <Button
            android:id="@+id/Calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickCalculate"
            android:text="Calculate distance and bearing"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geodesic distance"
                android:textSize="10pt"></TextView>

            <EditText
                android:id="@+id/GeodesicDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geodesic bearing"
                android:textSize="10pt"></TextView>

            <EditText
                android:id="@+id/GeodesicBearing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rhumb distance"
                android:textSize="10pt"></TextView>

            <EditText
                android:id="@+id/RhumbDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rhumb bearing"
                android:textSize="10pt"></TextView>

            <EditText
                android:id="@+id/RhumbBearing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"></EditText>
        </LinearLayout>

        <Button
            android:id="@+id/CalculateLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickCalculateLocation"
            android:text="Calculate Location"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geodesic Lat 2 "
                android:textSize="10pt"></TextView>

            <TextView
                android:id="@+id/GeodesicLat2"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textSize="10pt"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lon 2 "
                android:textSize="10pt"></TextView>

            <TextView
                android:id="@+id/GeodesicLon2"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textSize="10pt"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rhumb Lat 2 "
                android:textSize="10pt"></TextView>

            <TextView
                android:id="@+id/RhumbLat2"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textSize="10pt"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lon 2 "
                android:textSize="10pt"></TextView>

            <TextView
                android:id="@+id/RhumbLon2"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textSize="10pt"></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickExit"
            android:text="Exit"></Button>

    </LinearLayout>

</layout>